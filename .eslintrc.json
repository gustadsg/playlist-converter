{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "airbnb/hooks", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    "react/prop-types": 0,
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": [1, { "extensions": ["jsx"] }],
    "quotes": ["error", "double"],
    "prettier/prettier": "error"
  }
}
